{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
