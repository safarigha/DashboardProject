{
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "types": ["leaflet"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@services/*": ["src/services/*"],
      "@schemas/*": ["src/schemas/*"],
      "@features/*": ["src/app/features/*"]
    },
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "isolatedModules": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
